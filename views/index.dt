doctype html
html
	head
		title C++ formatter (based on clang-format)
	body
		form(action="/", method="POST")
			p Style:
			select(name="style")
				- foreach(i,o; styles)
					//- option(value=o #{(i==4)?",selected",""}) #{o}
					- if(i == 4)
						option(value=o, selected) #{o}
					- else
						option(value=o) #{o}
			textarea(name="code") #{code}
			button(type="submit") Format!